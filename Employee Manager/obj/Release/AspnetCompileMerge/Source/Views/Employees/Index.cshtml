@model IEnumerable<Employee_Manager.Employee>

@{
    ViewBag.Title = "List of Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<table class="sectionHeader">
    <tr>
        <td>
            <h2>List of Employees</h2>

            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
        </td>
        <td>
            Department Filter
            @using (Html.BeginForm("Index", "Employees", FormMethod.Post, new { id = "filterByDeptForm" }))
            {
                @Html.DropDownList(
                   "cboDeptFilter",
                   (IEnumerable<SelectListItem>)ViewData["DeptFilter"],
                   new { onchange = "document.getElementById('filterByDeptForm').submit();" })
            }

        </td>
        <td>
            <div class="blurred-emps" />
        </td>
    </tr>
</table>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeskLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomePhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomeAddress1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomeAddress2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomeCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomeState)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomeZip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeskLocation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomePhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomeAddress1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomeAddress2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomeCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomeState)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomeZip)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EmployeeId }) |
            @Html.ActionLink("Details", "Details", new { id=item.EmployeeId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EmployeeId })
        </td>
    </tr>
}

</table>
